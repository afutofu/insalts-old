<% include ../partials/header%>

<div id="all-salts" class="jumbotron jumbotron-short">
  <div class="container">
    <h3 class="">Check Out All The Salts</h3>
    <p>
      <span
        >Browse the saltiest salts. Find which one you like and start
        insalting</span
      >
    </p>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <%salts.forEach(function(salt){%>
      <div class="card salt">
        <div class="card-header">
          s/<%= salt.name %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= salt.slogan %></h5>
          <p class="card-text">
            <%= salt.description %>
          </p>
          <a href="#" class="btn btn-rocksalt">Join</a>
        </div>
      </div>
      <%})%>
    </div>

    <div class="col-lg-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">SALTS</h5>
          <p class="card-text">
            Check out all the Salts made by our users, or create one yourself!
          </p>
          <a class="btn btn-rocksalt btn-block btn-xl" href="/s/new">
            CREATE SALT
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer%>
